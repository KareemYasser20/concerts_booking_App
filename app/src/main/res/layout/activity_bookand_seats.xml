<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookandSeats"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/slectseats_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your seats Please"
        android:textColor="#006DF0"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        />

    <GridView
        android:id="@+id/gridview_select_seats"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:numColumns="5"
        />


    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="345dp"
        android:layout_height="45dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"

        >
        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_seat_green"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"

                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available "
                android:textColor="#006DF0"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_seat_red"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserved "
                android:textColor="#006DF0"
                android:textSize="17dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_chair"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected "
                android:textColor="#006DF0"
                android:textSize="17dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="345dp"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="16dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/F_c_price_tx"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Class"
                android:textColor="#006DF0"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/F_c_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="200L.E"
                app:layout_constraintTop_toBottomOf="@+id/F_c_price_tx"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="#006DF0"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/S_c_price_tx"
                app:layout_constraintStart_toEndOf="@+id/F_c_price_tx"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Class"
                android:textColor="#006DF0"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/S_c_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="100L.E"
                app:layout_constraintTop_toBottomOf="@+id/S_c_price_tx"
                app:layout_constraintStart_toEndOf="@+id/F_c_price"
                android:textColor="#006DF0"
                android:textSize="20dp"
                />


            <TextView
                android:id="@+id/T_c_price_tx"
                app:layout_constraintStart_toEndOf="@+id/S_c_price_tx"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Third Class"
                android:textColor="#006DF0"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/T_c_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="80L.E"
                app:layout_constraintTop_toBottomOf="@+id/T_c_price_tx"
                app:layout_constraintStart_toEndOf="@+id/S_c_price"
                android:textColor="#006DF0"
                android:textSize="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="345dp"
        android:layout_height="85dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="16dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Seats_n_booked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats is : "
                android:textColor="#006DF0"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,7"
                android:textColor="#006DF0"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/Seats_n_booked"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:id="@+id/Total_t_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tickets Price : "
                android:textColor="#006DF0"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/Seats_n_booked"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400L.E"
                app:layout_constraintStart_toEndOf="@+id/Total_t_price"
                app:layout_constraintTop_toBottomOf="@+id/Seats_n_booked"
                android:textColor="#006DF0"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/Book_now_btn"
        android:layout_width="130dp"
        android:gravity="center"
        android:layout_height="50dp"
        android:text="Book Now"
        android:textColor="#006DF0"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        />

</LinearLayout>