<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    >

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConcertPlace"
    android:background="@drawable/main_background"
    >


    <ImageView
        android:id="@+id/add_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_circle_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/Appname_partyplace_page"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/Appname_partyplace_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genuva App"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="55dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/Sakia_place"
        android:layout_width="170dp"
        android:layout_height="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Appname_partyplace_page"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/Skia_image"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:src="@drawable/sakia"


                />
            <TextView
                android:id="@+id/Skia_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sakia ElSawy"
                android:textColor="#C41735BE"
                android:layout_gravity="center"
                android:textStyle="bold"


                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Opera_cardview"
        android:layout_width="170dp"
        android:layout_height="280dp"
        app:layout_constraintStart_toEndOf="@+id/Sakia_place"
        app:layout_constraintTop_toBottomOf="@+id/Appname_partyplace_page"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/opera_image"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/opera_logo"

                />
            <TextView
                android:id="@+id/opera_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opera house"
                android:textColor="#C41735BE"
                android:layout_gravity="center"
                android:textStyle="bold"

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/myticket_btn"
        android:layout_width="370dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/Sakia_place"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="25dp"
        android:text="My ticket"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#C41735BE"
        android:textSize="25dp"

        />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="370dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/myticket_btn"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="25dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:textSize="25dp"

        />
    <Button
        android:id="@+id/control_panel_btn"
        android:layout_width="370dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/logout_btn"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="25dp"
        android:text="Control panel"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#C41735BE"
        android:textSize="25dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>